<!-- app/views/landing/index.html.erb -->

<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <h1>Course Companion</h1>
      <p class="text-muted">Please sign in to continue</p>

      <%= form_with url: login_path, method: :post do %>
        <div class="form-group">
          <label for="email">Email</label>
          <%= email_field_tag :email, nil, class: "form-control", placeholder: "Enter your email", autofocus: true, autocomplete: "email" %>
        </div>
        
        <div class="form-group">
          <label for="password">Password</label>
          <%= password_field_tag :password, nil, class: "form-control", placeholder: "Enter your password", autocomplete: "current-password" %>
        </div>
        
        <div class="form-actions">
          <%= submit_tag "Sign In", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Create Account Link -->
      <div class="create-account-link" style="margin-top: 1rem;">
        <%= link_to "Create Account", createaccount_path, method: :get, class: "btn btn-secondary" %>
      </div>

      <p class="text-muted" style="margin-top: 2.5rem;">Created by Joshua Hunsader</p>

    </div>
  </div>
</div>